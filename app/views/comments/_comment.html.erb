<%= div_for(comment) do %>
	<div class="comments_wrapper clearfix">
		<div class="pull-left">

			<%= image_tag gravatar_url(comment.user.email, 50), class:"round-img" %>
			<p class="lead"><%= comment.body %></p>
			<p><small>Enviado <strong> <%= time_ago_in_words(comment.created_at) %> </strong> por <%= comment.user.email %></small></p>
			<% if comment.user == current_user %>
            <%= link_to 'Destruir', comment, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: "btn btn-sm btn-default" %>
			<% end %>
		</div>
	</div>
<% end %>