<div id="content" class="col-md-12 center-block">
  <div class="container">
         <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <h2>Log in</h2>
      <div class="col-md-6 col-md-offset-4">
      
        <form>
          <div class="form-group form-inputs">
  	            <%= f.email_field :email, required: false, autofocus: true %>
    			<%= f.password_field :password, required: false %>

            <div class="form-actions">

              <%= f.submit "Fazer Log In", class:  "btn btn-warning" %>
              
            </div>
            <% end %>
          </div>
        </form>
<%= link_to "Voltar", root_path %> | <%= render "devise/shared/links" %>
      </div>
  </div>
</div>

