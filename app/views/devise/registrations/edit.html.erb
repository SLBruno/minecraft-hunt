<div id="content" class="col-md-12 center-block">
  <div class="container">

<h2> Minha Conta - Editar Configurações </h2>

  <div class="col-md-6 col-md-offset-4">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs input-group">
            <%= f.input :name, required: true %>
            <%= f.input :email, required: true, autofocus: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :password, autocomplete: "off", hint: "deixe em branco se você não deseja alterá-la", required: false %>
            <%= f.input :password_confirmation, required: false %>
            <%= f.input :current_password, hint: "nós precisamos de sua senha atual para confirmar as alterações", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Atualizar", class:"btn btn-warning" %>
          </div>
        <% end %>
        <br>
        <p>Não Gostou? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza? Nós vamos ficar tristes! =(" }, method: :delete %></p>


<%= link_to "Voltar", :back %>
      </div>
 </div>
</div>
