<div id="content" class="col-md-12 center-block">
  <div class="container">
    <h2>Cadastre-se para Enviar vídeos e votar nos que você mais gosta!</h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class=" col-md-offset-4 col-md-6 col-sm-12">
        <form>
          <div class="form-group panelcadastro">
  	        <%= f.text_field :name, required: true, placeholder: "Seu nome!" %>
            <%= f.email_field :email, required: true, autofocus: true, placeholder:"email que você usa mais!" %>
            <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "uma senha de pelo menos 8 digitos!"  %>
            <%= f.password_field :password_confirmation, required: true, placeholder: "repete ela ai pra confirmar!" %>

            <div class="form-actions">
              <%= f.submit "Cadastrar-se", class: "btn btn-warning" %>
              
            </div>
            <% end %>
          </div>
        </form>
<%= link_to "Voltar", root_path %> | <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
