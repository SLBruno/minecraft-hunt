<div id="content" class="col-md-12 center-block">
  <div class="container">
    <div class="row">  
        <div class="col-sm-7 col-xs-12">
            <div class="panel panel-index"> 
                <p><%= link_to image_tag("https://img.youtube.com/vi/#{@video.uid}/maxresdefault.jpg", alt: @video.title, class: 'imgyt'), 
                "https://www.youtube.com/watch?v=#{@video.uid}", target: '_blank' %></p>
                <div class="panelshow">        
            <p><strong><h3><%= link_to @video.title, "https://www.youtube.com/watch?v=#{@video.uid}", style: "color:black;" %></h3></strong></p>
            <p style="font-weight:300; font-size:1.2em;"><b></b><%= link_to @video.channel, "https://www.youtube.com/channel/#{@video.channelid}" %></p>
            <hr>
            <div class="showdescription"><%= @video.description.first(800) %></div>
            <div class="align-right">
            <%= link_to "ASSISTIR", "https://www.youtube.com/watch?v=#{@video.uid}", class:"btn btn-warning votebtn", style:"text-align:right; margin-bottom: 10px; margin-right:10px; "%> 
            </div><!--align-right-->
        </div><!--panelshow-->
    </div><!--panel-index-->
</div><!--primeira-coluna-->

        <div class="col-sm-4 col-xs-12 col-sm-offset-1" id="showinfo">
            <div class="panel panel-index showupvotepanel">
                <h3 style="color:white; font-weight:300; margin-top:-8px;"> O QUE VOCÊ ACHOU?</h3>
                <br>
                    <div class="row">
                        <% if user_signed_in? %>
                        <div class="col-xs-6">
                            <%= link_to like_video_path(@video), method: :put, class: "upvoteshow" do %> 
                            <p><%= image_tag("happy-emoticon.svg", size: "50", class: "upvoteimage")%></p>
                            <p class="upvotenumbershow"><%= @video.get_upvotes.size %></p>
                            <% end %>
                        </div>
                        <div class="col-xs-6">
                            <%= link_to dislike_video_path(@video), method: :put, class: "upvoteshow" do %> 
                            <p><%= image_tag("sad-emoticon.svg", size: "50", class: "upvoteimage")%></p>
                            <p class="upvotenumbershow"><%= @video.get_downvotes.size %></p>
                            <% end %>
                        </div>
                        <% else %> 
                        <div class="col-xs-6">
                            <%= link_to new_user_registration_path, class: "upvoteindex", data:{ confirm: "Para você votar nos vídeos, é necessário fazer login!" } do %> 
                            <p><%= image_tag("happy-emoticon.svg", size: "50", class: "upvoteimage")%></p>
                            <p class="upvotenumbershow"><%= @video.get_upvotes.size %></p>
                            <% end %>
                        </div>
                        <div class="col-xs-6">
                            <%= link_to new_user_registration_path, class: "upvoteindex", data:{ confirm: "Para você votar nos vídeos, é necessário fazer login!" } do %> 
                            <p><%= image_tag("sad-emoticon.svg", size: "50", class: "upvoteimage")%></p>
                            <p class="upvotenumbershow"><%= @video.get_downvotes.size %></p>
                            <% end %>
                        </div>
                        <% end %> 
                    </div>
            </div><!--panel-index-votar-agora-->
            <br>
            <div class="panel showstats">
            <h2> INFORMAÇÕES </h2>
                <h4><b>Views</b>
                <p><%= @video.views %></p></h4>
                <br>
                <h4><b>Likes</b>
                <p><%= @video.likes %></p></h4>
                <br>
                <h4><b>Dislikes</b>
                <p><%= @video.dislikes %></p></h4>
            </div><!--panel-index-votar-agora-->
        </div><!--segunda-coluna-->
    </div><!--row-->

    <div class="row">
        <div class="col-md-7 col-xs-12">
            <div class="panel" id="comments2">
                <div class="container">
                    <p class="comments_title">
                        <%= @video.comments.count %> Comentários
                    </p>
                    <%= render :partial => @video.comments %>
                </div><!--container-->
            </div><!--panel-->
        </div><!--col-->
        <% if user_signed_in? %>
            <div class="col-sm-4 col-xs-12 col-sm-offset-1" id="showaddcomment">
                <div class="panel box panel-default paneladdcomment">
                    <h3>DEIXE SEU COMENTÁRIO!!</h3> <%= simple_form_for [@video, Comment.new]  do |f| %>
                    <div class="field">
                        <%= f.text_area :body, class:"clearfix" %>
                    </div>   
                        <%= f.submit "Enviar Comentário", class: "btn btn-primary btn-lg" %>
                    <% end %>
                        <br>
                        <br>
                        <br>
                        <br>
                </div><!--container-->
            </div><!--panel-->
        <% end %> 
        </div><!--col-->
    </div><!--row-->
        <br>
        <% if current_user == @video.user %>
        <%= link_to 'Destruir', @video, method: :delete, data: { confirm: 'Você tem certeza?' } %> |
        <% end %> 
        <%= link_to 'Voltar', videos_path %>
    </div><!--comments2-->
        </div>
    </div><!--container-->
</div><!--content-->
